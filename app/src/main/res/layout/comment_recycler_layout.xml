<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="?attr/colorSurface"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutline"
    android:alpha="0.95">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- User Profile Image with Modern Styling -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/user_profile"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/profile_img"
            android:scaleType="centerCrop"
            app:strokeWidth="2dp"
            app:strokeColor="?attr/colorPrimary"
            app:shapeAppearanceOverlay="@style/CircularImageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Online Status Indicator -->
        <View
            android:id="@+id/online_indicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/online_indicator_bg"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@+id/user_profile"
            app:layout_constraintEnd_toEndOf="@+id/user_profile" />

        <!-- User Name with Enhanced Typography -->
        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:text="@string/samir_suroshe"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@+id/user_profile"
            app:layout_constraintStart_toEndOf="@+id/user_profile"
            app:layout_constraintEnd_toStartOf="@+id/time_container" />

        <!-- Time Container with Modern Badge -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/time_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="?attr/colorSurfaceVariant"
            app:layout_constraintTop_toTopOf="@+id/user_profile"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="4dp"
                android:text="@string/_10_s"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="sans-serif-medium" />

        </com.google.android.material.card.MaterialCardView>

        <!-- User Handle/Subtitle -->
        <TextView
            android:id="@+id/user_handle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:text="\@wellbeing_user"
            android:textSize="13sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:alpha="0.8"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/user_name"
            app:layout_constraintStart_toEndOf="@+id/user_profile"
            app:layout_constraintEnd_toStartOf="@+id/time_container" />

        <!-- Comment Content with Enhanced Styling -->
        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text=""
            android:textSize="15sp"
            android:textColor="?attr/colorOnSurface"
            android:lineSpacingExtra="2dp"
            android:justificationMode="inter_word"
            app:layout_constraintTop_toBottomOf="@+id/user_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Action Buttons Container -->
        <LinearLayout
            android:id="@+id/action_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Like Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/like_button"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:text="Like"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:icon="@drawable/ic_heart_outline"
                app:iconTint="?attr/colorOnSurfaceVariant"
                app:iconSize="16dp" />

            <!-- Reply Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/reply_button"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Reply"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:icon="@drawable/ic_reply"
                app:iconTint="?attr/colorOnSurfaceVariant"
                app:iconSize="16dp" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- More Options -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/more_options_button"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:icon="@drawable/ic_more_vert"
                app:iconTint="?attr/colorOnSurfaceVariant"
                app:iconSize="16dp" />

        </LinearLayout>

        <!-- Divider for Threaded Comments -->
        <View
            android:id="@+id/thread_divider"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="8dp"
            android:background="?attr/colorOutline"
            android:alpha="0.3"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/action_container"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>