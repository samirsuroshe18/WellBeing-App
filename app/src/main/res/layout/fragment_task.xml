<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TaskFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/navBtn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="Title             : "
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/taskTitleTV"
                    android:layout_width="287dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="200dp"
                    android:maxLines="2"
                    android:text=""
                    android:textSize="15sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/postBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Post"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="2dp"
                    android:text="Description : "
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/describeTV"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="300dp"
                    android:maxLines="5"
                    android:text=""
                    android:textSize="15sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="482dp">

                <ImageView
                    android:id="@+id/taskImage"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="-2dp"
                    android:layout_marginEnd="0dp"
                    android:scaleType="centerCrop"
                    android:visibility="visible" />

                <VideoView
                    android:id="@+id/taskVideo"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_alignParentTop="true"
                    android:visibility="invisible" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Created By : "
                    android:layout_weight="1"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="4dp"
                    android:textSize="15sp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/taskCreatedProfile"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="2dp"/>


                <TextView
                    android:id="@+id/taskCreatedUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="3"
                    android:layout_marginTop="2dp"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timeline to complete : "
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="4dp"/>

                <TextView
                    android:id="@+id/timelineTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="4"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Left : "
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/timeLeftTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"/>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/navBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acceptBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Accept" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acceptedBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Accepted"
            android:visibility="invisible"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Next" />

    </RelativeLayout>

</RelativeLayout>