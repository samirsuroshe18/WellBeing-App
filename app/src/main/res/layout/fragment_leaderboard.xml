<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    tools:context=".fragments.LeaderboardFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- Header Section -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/headerSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/header_gradient_bg"
                android:paddingTop="24dp"
                android:paddingBottom="32dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Title -->
                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leaderboard"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnPrimary"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/subtitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See how you rank among wellbeing champions"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnPrimary"
                    android:alpha="0.9"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/titleText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Top 3 Podium Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/podiumCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="-16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:layout_constraintTop_toBottomOf="@+id/headerSection"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/podiumLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- First Place (Center) -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/firstPlaceContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintWidth_percent="0.4">

                        <!-- Crown Icon -->
                        <ImageView
                            android:id="@+id/crownIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_crown"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:tint="@color/gold_accent" />

                        <!-- First Place Avatar -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/firstPlaceAvatarCard"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="50dp"
                            app:cardElevation="6dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/crownIcon"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/first_user"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/profile_img"
                                app:civ_border_color="@color/gold_accent"
                                app:civ_border_width="3dp" />

                        </androidx.cardview.widget.CardView>

                        <!-- Rank Badge -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/firstRankBadge"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:cardCornerRadius="16dp"
                            app:cardBackgroundColor="@color/gold_accent"
                            app:cardElevation="8dp"
                            android:elevation="8dp"
                            app:layout_constraintBottom_toBottomOf="@+id/firstPlaceAvatarCard"
                            app:layout_constraintEnd_toEndOf="@+id/firstPlaceAvatarCard">

                            <TextView
                                android:id="@+id/firstUserRank"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </androidx.cardview.widget.CardView>

                        <!-- Name -->
                        <TextView
                            android:id="@+id/firstUserName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_marginTop="12dp"
                            app:layout_constraintTop_toBottomOf="@+id/firstPlaceAvatarCard"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <!-- Points -->
                        <LinearLayout
                            android:id="@+id/firstUserPointsContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="4dp"
                            app:layout_constraintTop_toBottomOf="@+id/firstUserName"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/app_logo"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:id="@+id/firstUserPoints"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorPrimary" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Second and Third Place Row -->
                    <LinearLayout
                        android:id="@+id/secondThirdRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="32dp"
                        app:layout_constraintTop_toBottomOf="@+id/firstPlaceContainer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <!-- Second Place -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/secondPlaceContainer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/secondPlaceAvatarCard"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:cardCornerRadius="40dp"
                                app:cardElevation="4dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/second_user"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/profile_img"
                                    app:civ_border_color="@color/silver_accent"
                                    app:civ_border_width="2dp" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/secondRankBadge"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                app:cardCornerRadius="14dp"
                                app:cardBackgroundColor="@color/silver_accent"
                                app:cardElevation="4dp"
                                app:layout_constraintBottom_toBottomOf="@+id/secondPlaceAvatarCard"
                                app:layout_constraintEnd_toEndOf="@+id/secondPlaceAvatarCard">

                                <TextView
                                    android:id="@+id/secondUserRank"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="2"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/secondUserName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:layout_marginTop="8dp"
                                app:layout_constraintTop_toBottomOf="@+id/secondPlaceAvatarCard"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_marginTop="4dp"
                                app:layout_constraintTop_toBottomOf="@+id/secondUserName"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent">

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/app_logo"
                                    android:layout_marginEnd="4dp" />

                                <TextView
                                    android:id="@+id/secondUserPoints"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="?attr/colorOnSurfaceVariant" />

                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- Third Place -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/thirdPlaceContainer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/thirdPlaceAvatarCard"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:cardCornerRadius="40dp"
                                app:cardElevation="4dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/third_user"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/profile_img"
                                    app:civ_border_color="@color/bronze_accent"
                                    app:civ_border_width="2dp" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/thirdRankBadge"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                app:cardCornerRadius="14dp"
                                app:cardBackgroundColor="@color/bronze_accent"
                                app:cardElevation="4dp"
                                app:layout_constraintBottom_toBottomOf="@+id/thirdPlaceAvatarCard"
                                app:layout_constraintEnd_toEndOf="@+id/thirdPlaceAvatarCard">

                                <TextView
                                    android:id="@+id/thirdUserRank"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="3"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/thirdUserName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:layout_marginTop="8dp"
                                app:layout_constraintTop_toBottomOf="@+id/thirdPlaceAvatarCard"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_marginTop="4dp"
                                app:layout_constraintTop_toBottomOf="@+id/thirdUserName"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent">

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/app_logo"
                                    android:layout_marginEnd="4dp" />

                                <TextView
                                    android:id="@+id/thirdUserPoints"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="?attr/colorOnSurfaceVariant" />

                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <!-- Rest of Leaderboard Section -->
            <LinearLayout
                android:id="@+id/restOfLeaderboardSection"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@+id/podiumCard"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Section Header -->
                <TextView
                    android:id="@+id/restOfLeaderboardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other Champions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground"
                    android:layout_marginBottom="16dp" />

                <!-- RecyclerView Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/leaderboard_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>



    <!-- Loading Animation -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loadingAnim"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loading_animation" />

</androidx.constraintlayout.widget.ConstraintLayout>